<metro:MetroWindow x:Class="MagonoteToolkitForEmbedded.Views.MainWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:prism="http://prismlibrary.com/"
                   xmlns:viewmodels="clr-namespace:MagonoteToolkitForEmbedded.ViewModels"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                   prism:ViewModelLocator.AutoWireViewModel="True"
                   d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
                   mc:Ignorable="d"
                   Title="{Binding Title}"
                   Width="1280" Height="800"
                   TitleCharacterCasing="Normal">
    <Grid>
        <StackPanel>
            <Menu materialDesign:MenuAssist.TopLevelMenuItemHeight="25"
                  materialDesign:RippleAssist.IsDisabled="True">            <!-- クリック時のアニメーションを無効化 -->
                <MenuItem Header="変換系(_C)" IsEnabled="False">
                    <MenuItem Header="未実装"/>
                </MenuItem>
                <MenuItem Header="生成系(_G)" IsEnabled="False">
                    <MenuItem Header="未実装"/>
                </MenuItem>
                <MenuItem Header="マイコン/IC系(_M)" IsEnabled="False">
                    <MenuItem Header="未実装"/>
                </MenuItem>
                <MenuItem Header="ヘルプ(_H)">
                    <MenuItem Header="バージョン情報" Command="{Binding CommandTransitionView}" CommandParameter="UserControlAboutInfo"/>
                </MenuItem>
            </Menu>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </StackPanel>
    </Grid>
</metro:MetroWindow>
