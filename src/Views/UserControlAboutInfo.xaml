<UserControl x:Class="MagonoteToolkitForEmbedded.Views.UserControlAboutInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewmodels="clr-namespace:MagonoteToolkitForEmbedded.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=viewmodels:UserControlAboutInfoViewModel, IsDesignTimeCreatable=True}"   
             mc:Ignorable="d">
    <Grid Margin="10,10,10,10">
        <StackPanel>
            <TextBlock Text="{Binding Product}"     Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
            <TextBlock Text="{Binding Version}"     Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
            <TextBlock Text="{Binding Copyright}"   Style="{StaticResource MaterialDesignBody1TextBlock}"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
